<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoordinatorLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@style/ToolBarOverlayIcon</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolBarNavigationIconStyle</item>
    </style>

    <style name="ToolBarNavigationIconStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ToolBarOverlayIcon" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:tint">#333333</item>
    </style>
    <style name="CollapsingToolbar">
        <item name="color">@color/collapsing_toolbar</item>
    </style>
</resources>